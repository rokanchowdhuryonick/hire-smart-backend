APP_NAME="HireSmart Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=hire-smart-backend-db
DB_PORT=5432
DB_DATABASE=hire_smart
DB_USERNAME=hire_smart_user
DB_PASSWORD=hire_smart_password

# Redis Configuration
REDIS_HOST=hire-smart-backend-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=hire_smart_cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@rokanbd.cf"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=
JWT_ALGO=HS256
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=0

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting Configuration
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# File Storage Configuration
FILESYSTEM_DISK=local

# API Configuration
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_LOGIN_PER_MINUTE=5
API_RATE_LIMIT_APPLY_PER_MINUTE=10

# Job Processing Configuration
JOB_MATCHING_ENABLED=true
JOB_MATCHING_BATCH_SIZE=100
JOB_MATCHING_FREQUENCY=hourly

# Cache TTL Configuration (in seconds)
CACHE_TTL_JOBS=300
CACHE_TTL_STATS=1800
CACHE_TTL_LOCATIONS=86400

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# pgAdmin Configuration (for development)
PGADMIN_EMAIL=hello+pgadmin@rokanbd.cf
PGADMIN_PASSWORD=admin123

# Application Features
FEATURE_JOB_MATCHING=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# File Upload Configuration
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx
UPLOAD_PATH=uploads/resumes

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Archive Configuration
ARCHIVE_JOBS_AFTER_DAYS=30
CLEANUP_UNVERIFIED_USERS_AFTER_DAYS=7
